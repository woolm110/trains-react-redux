
{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "airbnb",
    "ostmodern"
  ],
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jasmine": true,
    "jest": true
  },
  "plugins": ["react", "jest"],
  "rules": {
    "no-underscore-dangle": "off",
    "space-before-function-paren": ["error", "always"],
    "no-plusplus": "off"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.dev.js"
      }
    }
  }
}
